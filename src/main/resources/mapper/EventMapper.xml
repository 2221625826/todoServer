<mapper namespace="com.zyh.todo.dal.mapper.EventMapper">
    <resultMap id="BaseResultMap" type="com.zyh.todo.model.po.EventPO">
        <id column="id" jdbcType="INTEGER" property="id"/>
        <result column="priority" jdbcType="TINYINT" property="priority"/>
        <result column="title" jdbcType="VARCHAR" property="title"/>
        <result column="desc" jdbcType="VARCHAR" property="desc"/>
        <result column="tags" jdbcType="VARCHAR" property="tags"/>
        <result column="topic" jdbcType="VARCHAR" property="topic"/>
        <result column="status" jdbcType="TINYINT" property="status"/>
        <result column="create_time" jdbcType="BIGINT" property="createTime"/>
        <result column="update_time" jdbcType="BIGINT" property="updateTime"/>
        <result column="complete_time" jdbcType="BIGINT" property="completeTime"/>
    </resultMap>
    <sql id="cols">id, priority, title, `desc`, tags, topic, status, create_time, update_time, complete_time</sql>
    <sql id="table">event</sql>
    <delete id="deleteByPrimaryKey" parameterType="java.lang.Integer">
        delete from event
        where id = #{id,jdbcType=INTEGER}
    </delete>
    <insert id="insert" parameterType="com.zyh.todo.model.po.EventPO">
        insert into event
        <trim prefix="(" suffix=")" suffixOverrides=",">
            priority,
            title,
            <if test="desc != null">
                `desc`,
            </if>
            <if test="tags != null">
                tags,
            </if>
            <if test="topic != null">
                topic,
            </if>
            status, create_time, update_time, complete_time,
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            #{priority,jdbcType=TINYINT},
            <if test="title != null">
                #{title,jdbcType=VARCHAR},
            </if>
            <if test="desc != null">
                #{desc,jdbcType=VARCHAR},
            </if>
            <if test="tags != null">
                #{tags,jdbcType=VARCHAR},
            </if>
            <if test="topic != null">
                #{topic,jdbcType=VARCHAR},
            </if>
            <if test="status != null">
                #{status,jdbcType=TINYINT},
            </if>
            #{createTime,jdbcType=BIGINT}, #{updateTime,jdbcType=BIGINT}, #{completeTime,jdbcType=BIGINT}
        </trim>
    </insert>
    <update id="updateByPrimaryKey" parameterType="com.zyh.todo.model.po.EventPO">
        update event
        set priority = #{priority,jdbcType=TINYINT},
        title = #{title,jdbcType=VARCHAR},
        desc = #{desc,jdbcType=VARCHAR},
        tags = #{tags,jdbcType=VARCHAR},
        topic = #{topic,jdbcType=VARCHAR},
        status = #{status,jdbcType=TINYINT},
        create_time = #{createTime,jdbcType=BIGINT},
        update_time = #{updateTime,jdbcType=BIGINT},
        complete_time = #{completeTime,jdbcType=BIGINT}
        where id = #{id,jdbcType=INTEGER}
    </update>
    <update id="updateStatusById">
        update <include refid="table"/>
        <set> status = #{status,jdbcType=TINYINT} </set>
        <where> id = #{id,jdbcType=INTEGER} </where>
    </update>
    <select id="selectByPrimaryKey" parameterType="java.lang.Integer" resultMap="BaseResultMap">
        select id, priority, title, desc, tags, topic, status, create_time, update_time, complete_time
        from event
        where id = #{id,jdbcType=INTEGER}
    </select>
    <select id="selectAll" resultMap="BaseResultMap">
        select id, priority, title, `desc`, tags, topic, status, create_time, update_time, complete_time
        from event
        <where>status != 3</where>
    </select>
    <select id="selectTodo" resultType="com.zyh.todo.model.po.EventPO">
        select <include refid="cols"/> from <include refid="table"/>
        <where>status == 0 OR status == 1</where>
    </select>
    <select id="selectDone" resultType="com.zyh.todo.model.po.EventPO">
        select <include refid="cols"/> from <include refid="table"/>
        <where>status == 2</where>
    </select>
</mapper>